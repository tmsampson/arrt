{
	// See https://go.microsoft.com/fwlink/?LinkId=733558 
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"subcommand": "clean",
			"problemMatcher": [
				"$rustc"
			],
			"presentation": {
				"clear": true
			}
		},
		{
			"type": "cargo",
			"subcommand": "check",
			"problemMatcher": [
				"$rustc"
			],
			"presentation": {
				"clear": true
			}
		},
		{
			"type": "cargo",
			"subcommand": "build",
			"problemMatcher": [
				"$rustc"
			],
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "Rust: cargo run",
			"group": "build",
			"type": "shell",
			"command": "cargo run",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$rustc"
			],
			"presentation": {
				"clear": true
			}
		}
	]
}